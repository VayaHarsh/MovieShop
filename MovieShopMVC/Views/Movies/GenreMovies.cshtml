@using ApplicationCore.Models;
@model PagedResultSet<MovieCardModel>;

@{
    ViewData["Title"] = "Genre";
}

@*Display top 30 highest grossing movies, as movie cards *@

<div class="rounded">
    <div class="container-fluid">
        <div class="row">

            @foreach (var movieCard in Model?.Data)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                    <partial name="_MovieCard" model="movieCard" />
                </div>
            }

        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a asp-action="GenreMovies" asp-route-page = "@(Model.PageIndex - 1)" class="btn btn-primary @prevDisabled" prevDisabled>Previous</a>
<a asp-action="GenreMovies" asp-route-page = "@(Model.PageIndex + 1)" class="btn btn-primary @nextDisabled" nextDisabled>Next</a>
